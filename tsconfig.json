{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist/client",
    "sourceMap": false,
    "noImplicitAny": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esNext",
    "declaration": false,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "@/com": ["src/client/pages/components"]
    },
  },
  "include": [
    "src/client",
    "src/client/typings/img.d.ts"
  ],
  "lib": [
    "es2015",
    "es2016",
    "dom"
]
}