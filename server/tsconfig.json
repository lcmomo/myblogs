{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src",
    // "./types"
  ],
  "exclude": ["node_modules"]
}
