{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist_server",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/server/*"]
    },
  },
  "include": [
    "src/server"
  ],
  "exclude": ["node_modules"]
}
